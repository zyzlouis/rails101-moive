<%= form_for @mymoive do |f| %>
<% if @mymoive.errors.any? %>
<ul>
  <% @mymoive.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
标题
<%= f.text_field :name %>
<br>
叙述
<br>
<%= f.text_area :description %>
<br>

<%= f.submit "Submit", :disable_with => 'Submiting...' %>
<% end %>
